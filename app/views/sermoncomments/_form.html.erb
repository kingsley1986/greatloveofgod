<%= simple_form_for([@sermon, @sermon.sermon_reviews.build], remote: true) do |f| %>
  <div class="sermoncomment_body"><%= f.input :body, placeholder: "Please type your comment here", as: :text, input_html: { rows: "8", style:"margin:auto"}%></div>
  <%= f.input :name, placeholder: "please enter your name here" %>
  <%= f.input :email, placeholder: "please enter your email here, your email will not be published" %>
  <button type="submit" class="btn btn-success" id="submit" name="submit"/>Submit</button>
<% end %>
