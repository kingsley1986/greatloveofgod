<% @images.each_slice(4) do |imagegal| %>
	<% imagegal.each do |imager| %>
		<div class=frame>
  		<%= image_tag(imager.image.url(:medium), style:"   max-height: 100%;
		   max-width: 100%;
		   width: auto;
		   height: auto;
		   position: absolute;
		   top: 0;
		   bottom: 0;
		   left: 0;
		   right: 0;
		   margin: auto;" ) %>
  	 	<span><%= imager.image_description%>.</span>
	 	</div>
	 <% end %>
<% end %>
